<% layout('./layouts/boilerplate')%>

<div
    class="container login-container d-flex align-items-center justify-content-center min-vh-100"
>
    <div class="row w-100">
        <div class="col-md-6">
            <div class="login-form">
                <h1 class="mb-3">
                    <img
                        src="/images/Terrainly_logo.png"
                        alt="Terrainly Logo"
                        class="logo"
                        width="30"
                    />
                    <span class="terrainly-text">Terrainly</span>
                </h1>
                <h2 class="h3 mb-2"><strong>Welcome!</strong></h2>
                <p class="text-muted mb-3">Create your account</p>
                <form
                    action="/register"
                    method="POST"
                    class="validated-form"
                    novalidate
                >
                    <div class="mb-3">
                        <label class="form-label" for="username"
                            >Username</label
                        >
                        <input
                            class="form-control"
                            type="text"
                            id="username"
                            name="username"
                            autofocus
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input
                            class="form-control"
                            type="email"
                            name="email"
                            id="email"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password"
                            >Password</label
                        >
                        <input
                            class="form-control"
                            type="password"
                            name="password"
                            id="password"
                            required
                        />
                    </div>
                    <button type="submit" class="btn btn-secondary w-100">
                        Register
                    </button>
                </form>
                <div class="text-center mt-2">
                    <p class="text-muted">
                        Already have an account?
                        <a
                            href="/login"
                            class="text-decoration-none fw-bold text-dark"
                            >Sign in</a
                        >
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 d-none d-md-block">
            <div class="login-image"></div>
        </div>
    </div>
</div>

<style>
    body {
        overflow: hidden;
    }

    footer {
        display: none;
    }

    .login-container {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
    }
</style>
