<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="icon"
            href="../public/images/favicon.png"
            type="image/x-png"
            sizes="16x16"
        />
        <title>YelpCamp</title>

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />

        <script
            src="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js"
            crossorigin
        ></script>
        <link
            href="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css"
            rel="stylesheet"
            crossorigin
        />
        <link rel="stylesheet" href="/stylesheets/app.css" />
        <style>
            body {
                padding-top: 56px;
            }
        </style>
    </head>
    <body class="d-flex flex-column vh-100">
        <header class="fixed-top"><%- include('../partials/navbar')%></header>
        <main class="mt-5"><%- include('../partials/flash')%> <%- body %></main>
        <%- include('../partials/footer')%>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
        <script src="/javascripts/validateForms.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
        <script>
            let lastScrollTop = 0;
            const navbar = document.querySelector("header");
            const navbarHeight = navbar.offsetHeight;
            let isAnimating = false;

            function handleScroll() {
                if (
                    isAnimating ||
                    document.body.classList.contains("static-nav")
                )
                    return;

                let scrollTop =
                    window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop && scrollTop > navbarHeight) {
                    // Scrolling down and past the navbar height
                    hideNavbar();
                } else if (scrollTop < lastScrollTop) {
                    // Scrolling up
                    showNavbar();
                }

                lastScrollTop = scrollTop;
            }

            function hideNavbar() {
                isAnimating = true;
                anime({
                    targets: navbar,
                    translateY: -navbarHeight,
                    duration: 300,
                    easing: "easeInOutQuad",
                    complete: () => (isAnimating = false),
                });
            }

            function showNavbar() {
                isAnimating = true;
                anime({
                    targets: navbar,
                    translateY: 0,
                    duration: 300,
                    easing: "easeInOutQuad",
                    complete: () => (isAnimating = false),
                });
            }

            window.addEventListener("scroll", handleScroll);
        </script>
    </body>
</html>
